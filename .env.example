APP_NAME=RentPath
APP_ENV=local
APP_KEY=
APP_DEBUG=true

# URL Components - used consistently across backend and frontend
# Scheme: http (local) or https (production) - for URL generation only, not actual encryption
APP_URL_SCHEME=http
# Domain: base domain without scheme, subdomain, or port
APP_DOMAIN=rentpath.test
# Port: optional, only for local development (leave empty in production)
APP_PORT=8000

# Manager Portal Subdomain
# Full URL computed as: {APP_URL_SCHEME}://{MANAGER_SUBDOMAIN}.{APP_DOMAIN}:{APP_PORT}
MANAGER_SUBDOMAIN=manager

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
# IMPORTANT: For subdomain routing to work, sessions must be shared across subdomains
# The domain must start with a dot (.) to share cookies across subdomains
# Local: .localhost (shares cookies between localhost, manager.localhost, etc.)
# Production: .{APP_DOMAIN} (e.g., .rentpath.app shares across all subdomains)
SESSION_DOMAIN=.localhost

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
# Optional: Override automatic disk selection (auto-detects based on environment)
# FILESYSTEM_DISK_PUBLIC=public
# FILESYSTEM_DISK_PRIVATE=private
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Development Server Configuration
# For mobile/network access, set these variables and run: composer dev:mobile
# VITE_DEV_SERVER_HOST: Set to 0.0.0.0 to allow network access (default: 127.0.0.1)
# VITE_HMR_HOST: Set to your local IP address for hot module reload on mobile devices
# Example: VITE_DEV_SERVER_HOST=0.0.0.0
# Example: VITE_HMR_HOST=192.168.1.100
# VITE_DEV_SERVER_HOST=
# VITE_HMR_HOST=
