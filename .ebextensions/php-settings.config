files:
  "/etc/php.d/99-custom.ini":
    mode: "000644"
    owner: root
    group: root
    content: |
      ; Custom PHP settings for Laravel
      upload_max_filesize = 64M
      post_max_size = 64M
      memory_limit = 256M
      max_execution_time = 300
      date.timezone = UTC

commands:
  restart_php_fpm:
    command: "systemctl restart php-fpm.service"
